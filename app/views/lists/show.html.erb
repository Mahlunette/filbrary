<% if @list.image.attached? %>
  <div class ="banner" style="background-image: url(<%= @list.image.url %>">
    <div class="container">
      <h1>Show page for a list <strong> <%= @list.name %></strong></h1>
      <p>It has<strong> <%= @list.bookmarks.count %> bookmark</strong></p>
    </div>
  </div>
<% else %>
  <div class="banner" style="background-image: url('https://i.imgur.com/jrEFD1z.jpg');">
    <div class="container">
      <h1>Show page for a list <strong> <%= @list.name %></strong></h1>
      <p>It has<strong> <%= @list.bookmarks.count %> bookmark</strong></p>
    </div>
  </div>
<% end %>
<%# //we can also use a link_to// %>
<div class="d-flex justify-content-end mt-3 mb-3">
  <%= button_to "Add a movie",  new_list_bookmark_path(@list), method: :get, class: "link-button" %>
</div>
<div class="d-flex flex-wrap justify-content-around">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="bookmark-container">
      <img class="bookmark-image" src=<%=bookmark.movie.poster_url%> alt="movie poster">
      <div class="bookmark-info ps-2">
      <div class="d-flex justify-content-start">
        <h6 class="pe-2 pe-0"> <%= bookmark.movie.title  %></h6>
        <i class="fas fa-circle p-2 ps-0"></i>
        <p class="pe-2"> <%= bookmark.movie.rating %></p>
        <i class="fas fa-star p-1"></i>
       </div>
       <p><%= bookmark.comment %></p>
       <div class="d-flex justify-content-around">
        <p> <%= @list.name %></p>
        <%= button_to "Delete the Movie", bookmark_path(bookmark), method: :delete, class: "delete-button", data: {confirm: "Are you sure?"} %>
        </div>
      </div>
    </div>
  <% end %>
</div>
